    "@tsed/passport": "^7.29.0",
    "@tsed/platform-express": "^7.29.0",
    "@tsed/prisma": "^7.29.1",
    "@tsed/swagger": "^7.29.0",
    "argon2": "^0.30.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express-session": "^1.17.3",
    "fs": "^0.0.1-security",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jsonwebtoken": "^9.0.0",
    "method-override": "^3.0.0",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
